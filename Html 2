  function renderList() {
    const list = document.getElementById("emiList");
    list.innerHTML = "";
    emiList.forEach((emi, index) => {
      const li = document.createElement("li");
      li.textContent = emi;

      const delBtn = document.createElement("button");
      delBtn.textContent = "Delete";
      delBtn.onclick = () => deleteEMI(index);
      delBtn.style.marginLeft = "10px";

      const execBtn = document.createElement("button");
      execBtn.textContent = "Execute";
      execBtn.onclick = () => executeCommand(index);
      execBtn.style.marginLeft = "5px";

      li.appendChild(execBtn);
      li.appendChild(delBtn);
      list.appendChild(li);
    });
  }

  // Initial dummy EMI list
