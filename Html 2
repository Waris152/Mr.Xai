<body>
  <h1>Mr X AI - Manual EMI Command Panel</h1>

  <input type="text" id="emiInput" placeholder="Enter EMI Number">
  <button onclick="logEMI()">Save EMI</button>

  <input type="text" id="commandInput" placeholder="Type command (search, allow, delete)">
  <button onclick="executeCommand()">Run Command</button>

  <div id="emiList"></div>

  <script>
    let emiData = JSON.parse(localStorage.getItem("emiData") || "[]");

    function saveData() {
      localStorage.setItem("emiData", JSON.stringify(emiData));
    }

    function displayEMIs() {
      const container = document.getElementById("emiList");
      container.innerHTML = "";
      emiData.forEach((emi, index) => {
        container.innerHTML += `
          <div class="emi-entry">
            <b>EMI:</b> ${emi.number}<br>
            <b>Status:</b> ${emi.status}<br>
            <small>ID: ${index}</small>
          </div>`;
      });
    }

    function logEMI() {
      const emi = document.getElementById("emiInput").value.trim();
      if (emi) {
        emiData.push({ number: emi, status: "Logged" });
        saveData();
        displayEMIs();
        document.getElementById("emiInput").value = "";
      }
    }

    function executeCommand() {
      const cmd = document.getElementById("commandInput").value.trim().toLowerCase();

      if (cmd.startsWith("search ")) {
        const searchEmi = cmd.split(" ")[1];
        const found = emiData.find(e => e.number === searchEmi);
        alert(found ? `Found: ${found.number} ‚Üí ${found.status}` : "EMI not found");
      } else if (cmd.startsWith("allow ")) {
        const allowEmi = cmd.split(" ")[1];
        let found = emiData.find(e => e.number === allowEmi);
        if (found) {
          found.status = "Remote Access Allowed";
          saveData();
          displayEMIs();
          alert("Access allowed");
        } else alert("EMI not found");
      } else if (cmd.startsWith("delete ")) {
        const delEmi = cmd.split(" ")[1];
        emiData = emiData.filter(e => e.number !== delEmi);
        saveData();
        displayEMIs();
        alert("EMI deleted");
      } else {
        alert("Invalid command");
      }

      document.getElementById("commandInput").value = "";
    }

    displayEMIs();
  </script>
</body>
</html><hr>
<h2>Manual Command Input (For Mr X AI)</h2>

<input type="text" id="manualCommand" placeholder="Enter Command or EMI Number" />
<button onclick="sendManualCommand()">Send</button>

<p id="aiReply"></p>

<script>
  let lastCommand = "";

  function sendManualCommand() {
    const input = document.getElementById("manualCommand").value;
    if (!input) {
      document.getElementById("aiReply").innerText = "Please enter a command.";
      return;
    }

    lastCommand = input;
    document.getElementById("aiReply").innerText = `You said: "${input}". Do you confirm? (Type Yes or No)`;
  }

  document.addEventListener("keydown", function(event) {
    const reply = event.key.toLowerCase();
    if ((reply === "y" || reply === "n") && lastCommand) {
      if (reply === "y") {
        document.getElementById("aiReply").innerText = `‚úÖ Confirmed. Executing: "${lastCommand}"`;
        // Future: Run Mr X AI action here
        lastCommand = "";
      } else {
        document.getElementById("aiReply").innerText = `‚ùå Command "${lastCommand}" cancelled.`;
        lastCommand = "";
      }
    }
  });
</script>