  function deleteEMI(index) {
    emiList.splice(index, 1);
    renderList();
  }

  function executeCommand(index) {
    const emi = emiList[index];
    const command = prompt(`Enter command for EMI ${emi}:`);
    if (command) {
      alert(`Command "${command}" executed for EMI: ${emi}`);
      // Yahan future me backend API call ya AI trigger kar sakte ho
