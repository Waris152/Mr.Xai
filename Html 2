  function addEMI() {
    const input = document.getElementById("emiInput");
    const value = input.value.trim();if (value === "") return;

    const emiList = document.getElementById("emiList");
    const div = document.createElement("div");
    div.className = "emi-item";
    div.innerHTML = `
      <span>${value}</span>
      <div>
        <button onclick="commandEMI('${value}')">Command</button>
        <button onclick="deleteEMI(this)">Delete</button>
      </div>
    `;
    emiList.appendChild(div);
    input.value = "";
   function deleteEMI(button) {
    button.parentElement.parentElement.parentElement.remove();

}function commandEMI(imei) {
  alert("Command sent to: " + imei);
}</script>
